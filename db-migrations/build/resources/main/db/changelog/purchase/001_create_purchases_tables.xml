<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

    <changeSet id="001_create_purchases_tables" author="admin">
        <createTable tableName="purchases">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="order_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="payment_status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="transaction_date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="details" type="TEXT"/>
        </createTable>

        <createIndex tableName="purchases" indexName="idx_purchases_user_id">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="purchases" indexName="idx_purchases_order_id">
            <column name="order_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>